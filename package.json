{
  "name": "llvm-asm",
	"displayName": "LLVM Assembly Language",
	"description": "Syntax highlighting and code navigation for LLVM assembly language.",
	"version": "0.0.1",
	"publisher": "voidc",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
        "onLanguage:llvm"
	],
	"main": "./out/extension.js",
	"contributes": {
        "languages": [
            {
                "id": "llvm",
                "aliases": [
                    "LLVM Assembly",
                    "llvm"
                ],
                "extensions": [
                    "ll"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "llvm",
                "scopeName": "source.llvm",
                "path": "./syntaxes/llvm.tmLanguage.json"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"compile-syntax": "npx js-yaml ./syntaxes/llvm.tmLanguage.yml > syntaxes/llvm.tmLanguage.json"
	},
	"devDependencies": {
		"@types/vscode": "^1.59.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"js-yaml": "^4.1.0"
	}
}
